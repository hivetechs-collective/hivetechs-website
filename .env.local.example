# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# MongoDB (if using)
MONGODB_URI=mongodb://localhost:27017/hivetechs

# Feature Flags
USE_PADDLE=false  # Set to true to use Paddle instead of Gumroad

# Paddle Configuration (Sandbox)
PADDLE_VENDOR_ID=your-sandbox-vendor-id
PADDLE_API_KEY=your-sandbox-api-key
PADDLE_PUBLIC_KEY=your-sandbox-public-key
PADDLE_WEBHOOK_SECRET=your-webhook-secret
PADDLE_SANDBOX=true

# Paddle Public Configuration (for client-side)
NEXT_PUBLIC_PADDLE_VENDOR_ID=your-sandbox-vendor-id
NEXT_PUBLIC_PADDLE_SANDBOX=true

# Paddle Product IDs (create these in sandbox)
PADDLE_PRODUCT_FREE=pro_free_sandbox
PADDLE_PRODUCT_BASIC=pro_basic_sandbox
PADDLE_PRODUCT_STANDARD=pro_standard_sandbox
PADDLE_PRODUCT_PREMIUM=pro_premium_sandbox
PADDLE_PRODUCT_TEAM=pro_team_sandbox

# Paddle Price IDs for Credit Packs
PADDLE_PRICE_CREDITS_25=pri_credits_25_sandbox
PADDLE_PRICE_CREDITS_75=pri_credits_75_sandbox
PADDLE_PRICE_CREDITS_200=pri_credits_200_sandbox

# Existing Gumroad Config (for migration period)
GUMROAD_SELLER_ID=your-gumroad-seller-id
GUMROAD_API_KEY=your-gumroad-api-key
GUMROAD_ACCESS_TOKEN=your-gumroad-access-token